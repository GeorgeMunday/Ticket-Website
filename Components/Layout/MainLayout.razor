@using tutorial.Services
@inherits LayoutComponentBase
@inject HeaderService HeaderService
@implements IDisposable

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Never" Variant="DrawerVariant.Mini" Elevation="1">
        <MudNavMenu>
            <NavMenu />
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudAppBar Elevation="0" Color="Color.Transparent">
            <MudText Typo="Typo.h6">@HeaderService.Heading</MudText>
            <MudSpacer />
            <NavLink Href="https://learn.microsoft.com/aspnet/core/" Target="_blank">docs</NavLink>
        </MudAppBar>

        <MudContainer MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            HeaderService.OnChange += StateHasChanged;
        }
    }

    public void Dispose()
    {
        HeaderService.OnChange -= StateHasChanged;
    }
}